<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Saisie"
    android:background="#ffffa96c">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="up"
        android:id="@+id/button_up"
        android:background="@drawable/red_green"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="left"
        android:id="@+id/button_left"
        android:background="@drawable/off"
        android:layout_below="@+id/button_up"
        android:layout_toLeftOf="@+id/button_down"
        android:layout_toStartOf="@+id/button_down" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="right"
        android:id="@+id/button_right"
        android:background="@drawable/red_r"
        android:layout_below="@+id/button_up"
        android:layout_toRightOf="@+id/button_down"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="false" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="down"
        android:id="@+id/button_down"
        android:background="@drawable/red_l"
        android:layout_below="@+id/button_right"
        android:layout_alignLeft="@+id/button_up"
        android:layout_alignStart="@+id/button_up"
        android:layout_margin="5dp" />

</RelativeLayout>
